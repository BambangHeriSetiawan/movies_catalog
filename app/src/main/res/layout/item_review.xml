<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:bind="http://schemas.android.com/tools">
  <data>
    <variable name="itemReviewVm" type="com.simx.moviecatalog.components.review.ItemReviewVM"/>
    <import type="android.view.View"/>
  </data>
  <com.google.android.material.card.MaterialCardView
    android:layout_margin="5dp"
    android:padding="5dp"
    app:cardCornerRadius="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <ImageView
        bind:image_rounded="@{itemReviewVm.avatar}"
        android:src="@drawable/ic_launcher_background"
        android:id="@+id/img_author"
        android:scaleType="centerCrop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="TODO" />
      <TextView
        android:text="@{itemReviewVm.author}"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/img_author"
        tools:text="@string/app_name"
        android:textStyle="bold"
        android:id="@+id/tv_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
      <TextView
        android:text="@{itemReviewVm.content}"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/img_author"
        android:layout_below="@id/img_author"
        tools:text="@string/app_name"
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </RelativeLayout>
  </com.google.android.material.card.MaterialCardView>
</layout>

