<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:bind="http://schemas.android.com/apk/res-auto">
  <data>
    <variable name="itemMoveVm" type="com.simx.moviecatalog.components.movie.ItemMovieVM"/>
    <import type="android.view.View"/>
  </data>
  <com.google.android.material.card.MaterialCardView
    android:layout_margin="5dp"
    bind:cardCornerRadius="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <RelativeLayout
        android:id="@+id/lyt_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
          bind:image="@{itemMoveVm.image}"
          android:src="@drawable/ic_launcher_background"
          android:scaleType="centerCrop"
          android:id="@+id/img_poster"
          android:layout_width="match_parent"
          android:layout_height="250dp"/>
      </RelativeLayout>
      <TextView
        android:text="@{itemMoveVm.rate}"
        android:background="@drawable/bg_oval_rate"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        tools:text="7.5"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_above="@id/lyt_detail"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
      <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lyt_detail"
        android:layout_below="@id/lyt_image"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
          android:text="@{itemMoveVm.title}"
          android:padding="5dp"
          android:id="@+id/tv_title"
          android:layout_below="@id/img_poster"
          tools:text="@string/app_name"
          android:textStyle="bold"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>
        <TextView
          android:text="@{itemMoveVm.releaseDate}"
          android:padding="5dp"
          android:layout_below="@id/tv_title"
          tools:text="@string/app_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>
      </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>
  </com.google.android.material.card.MaterialCardView>

</layout>

